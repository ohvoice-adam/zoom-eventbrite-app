# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_SECRET_KEY=your_secret_key_here_generate_with_python_secrets_token_hex_32
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# =============================================================================
# DATABASE (SQLite)
# =============================================================================
DATABASE_PATH=/opt/zoom-eventbrite-app/data/app.db

# =============================================================================
# API CREDENTIALS
# =============================================================================
# Zoom API (get from Zoom Marketplace)
ZOOM_API_KEY=your_zoom_api_key_here
ZOOM_API_SECRET=your_zoom_api_secret_here
ZOOM_ACCOUNT_ID=your_zoom_account_id_here

# Eventbrite API
EVENTBRITE_PRIVATE_TOKEN=your_eventbrite_private_token_here

# =============================================================================
# GOOGLE OAUTH (for SSO)
# =============================================================================
GOOGLE_SSO_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_SSO_CLIENT_SECRET=your_google_oauth_client_secret_here
ALLOWED_DOMAIN=ohvoice.org

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_FOLDER=/opt/zoom-eventbrite-app/uploads
DOWNLOAD_FOLDER=/opt/zoom-eventbrite-app/downloads
CREDENTIALS_FOLDER=/opt/zoom-eventbrite-app/credentials
MAX_CONTENT_LENGTH=104857600

# =============================================================================
# YOUTUBE INTEGRATION
# =============================================================================
YOUTUBE_CHANNEL_ID=your_youtube_channel_id_optional
CHECK_EXISTING_VIDEOS=True

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=300

# =============================================================================
# DOMAIN AND SSL
# =============================================================================
DOMAIN=your-domain.com
USE_SSL=True

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/opt/zoom-eventbrite-app/logs/app.log

# =============================================================================
# DOCKER DEPLOYMENT OPTIONS
# =============================================================================
HOST_PORT=80
HOST_SSL_PORT=443
